<Page x:Class="PresentationLayer.WindowsOfEntities.ButtonsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PresentationLayer.WindowsOfEntities"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="1024"
      Title="ButtonsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Click="ActionsButtonClick" Width="150" HorizontalAlignment="Center" Content="Actions"/>
        <Button Grid.Row="1" Grid.Column="0" IsEnabled="False" Width="150" HorizontalAlignment="Center" Content="Edit"/>
        <Button Grid.Row="0" Grid.Column="1" Width="150" HorizontalAlignment="Center" Content="Add"/>
        <Button Grid.Row="1" Grid.Column="1" Width="150" HorizontalAlignment="Center" Content="Show All"/>
        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Click="ClearButtonClick" Width="150" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Clear All"/>
    </Grid>
</Page>
