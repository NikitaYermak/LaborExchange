<Window x:Class="PresentationLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer"
        mc:Ignorable="d"
        Title="Labor Exchange" Height="600" Width="1024">
    <Grid>
        <Frame x:Name="MainFrame" Height="600" Width="1024" HorizontalAlignment="Right"/>
        <Menu Height="20" VerticalAlignment="Top" Grid.ColumnSpan="2" Background="LightGray">
            <MenuItem Header="Customer" Click="MenuCustomer_Click" VerticalAlignment="Center"/>
            <MenuItem Header="Summary" Click="MenuSummary_Click" VerticalAlignment="Center"/>
            <MenuItem Header="Unemployed" Click="MenuUnemployed_Click" VerticalAlignment="Center"/>
            <MenuItem Header="Vacancy" Click="MenuVacancy_Click" VerticalAlignment="Center"/>
        </Menu>
    </Grid>
</Window>
